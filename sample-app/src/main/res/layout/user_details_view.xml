<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="presenter"
            type="com.rainmakerlabs.sample.application.users.presenter.UserPresenter" />

        <variable
            name="user"
            type="com.rainmakerlabs.sample.application.users.model.User" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/padding_xx">

        <com.rainmakerlabs.support.ui.widget.CircleImageView
            android:id="@+id/imv_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:onClick="@{(view)->presenter.onProfileClick(view,user)}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{user.name}"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{user.email}"
            android:textStyle="bold" />
    </LinearLayout>
</layout>
